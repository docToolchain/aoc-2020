{
    "name": "aoc-python-dev",
    "dockerFile": "Dockerfile",
    "runArgs": [
        // Uncomment the line if you will use a ptrace-based debugger like C++, Go, and Rust.
        // "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined",
        // allow all capabilities
        "--cap-add=ALL",
        // mount docker socket
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock",
        // run with host network
        "--net",
        "host",
        // run in host pid namespace
        "--pid",
        "host",
        // run in host user namespace
        "--userns",
        "host",
        // run as privileged container
        "--privileged"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/root/aoc2020,type=bind",
    "workspaceFolder": "/root/aoc2020",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    
}
